extends layout 
block content
    // topnav with logo
    nav.navbar.bg-light
      .container-fluid
        span.navbar-brand.mb-0.fs-2.align-self-center UFARM

        nav.nav.d-flex.nav-pills
            a.nav-link.active(aria-current='page', href='#') UF DASHBOARD
            //- a.nav-link(href='#') Registered FOs
            a.nav-link(href='#') Product Uploads
            a.nav-link(href='#') Product Orders
            form(action="/logout", method="POST")     
                button.nav-link(name='submit', type='submit') Logout
    .container
      // navigation vertical left
      
      .col-2
        // profile information
        .card.shadow
          h5.card-header Profile Information
          .card-body      
            h1 Hello, #{currentuser.firstname+" "+currentuser.lastname}    
        br
        .card.shadow
          h5.card-header Registered UFs
          .card-body
            table 
              thead 
                    th Full Name
                    th User ID
                    th NIN Number
                    th Phone number
                    th Division
                    th Parish
              tbody 
                if urbanfarmers.length 
                  each urbanfarmer in urbanfarmers 
                    tr 
                        td #{urbanfarmer.firstname+" "+urbanfarmer.lastname}
                        td #{urbanfarmer.userId}
                        td #{urbanfarmer.nin}
                        td #{urbanfarmer.telephone}
                        td #{urbanfarmer.division}
                        td #{urbanfarmer.parish}                
                        td  
                          a.btn.btn-primary(href='/user/update'+urbanfarmer._id) Update
                        td
                          form(method='post' action='/user/delete')
                            input(type="hidden", placeholder='', name='id', value=urbanfarmer._id)
                            a.btn.btn-danger(href='#') Delete
            br
        //- Pending Product Uploads
        .card.shadow
          h5.card-header Pending Product Uploads
          .card-body
            table.table.table-bordered 
                    thead
                        tr
                            th Produce Image
                            th Produce Name
                            th Produce Unit Price
                            th Produce Type
                            th Produce Quantity                              
                            th Upload Date 
                            th Approve
                            th Delete
                    tbody
                        if products.length
                            each product in products
                                if products.status == "Pending"
                                    tr
                                        td
                                            img(src="/"+product.produceimg, alt="image" width="150px" height="150px")
                                        td #{product.producename}
                                        td #{product.produceprice}
                                        td #{product.producetype}
                                        td #{product.producequantity}                           
                                        td #{product.uploadDate}
                                        //- td #{moment(us 
                                        td
                                            a.btn.btn-primary.btn-block(href='/produce/approve/'+product._id) Approve
                                        td
                                            form(method="post" action='/produce/delete')
                                                input(type="hidden", placeholder="", name="id", value=product._id)
                                                button.btn.btn-danger.btn-block(type="submit") Delete         
            br
        //- Product Orders
        .card.shadow
          h5.card-header Completed Product Orders
          .card-body
            
            a.btn.btn-primary(href='#') View More
        br
        .card.shadow
          h5.card-header Pending Product Orders
          .card-body
            
            a.btn.btn-primary(href='#') View More
        br