doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title UFarm | Signup
    link(rel='stylesheet', href='/css/style.css')
  body
    .container
      form#signup.form(action='r/egisterUser', name='registration', method='POST')
        h1 Sign Up
        .form-field
          label(for='first-name') First Name:
          input#first-name(type='text', name='first-name', autocomplete='off', onblur='checkFirstName()')
          small
        .form-field
          label(for='last-name') Last Name:
          input#first-name(type='text', name='last-name', autocomplete='off', onblur='checkLastName()')
          small
        .form-field
          label(for='phone-number') Phone Number:
          input#phone-number(type='text', name='phone-number', autocomplete='off', onblur='checkTelephone()')
          small
        .form-field
          label(for='email') Email:
          input#email(type='email', name='email', autocomplete='off', onblur='checkEmail()')
          small
        .form-field
          label(for='password') Password:
          input#password(type='password', name='password', autocomplete='off', onblur='checkPassword()', required='')
          small
        .form-field
          label(for='confirm-password') Confirm Password:
          input#confirm-password(type='password', name='confirm-password', autocomplete='off', onblur='checkConfirmPassword()', required='')
          small
        .form-field
          input#submit.btn(type='submit', value='Sign Up')
          small
    script(src='/js/validation.js')